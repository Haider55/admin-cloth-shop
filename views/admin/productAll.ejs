				<h4><span>Products add</span></h4>
			
			</section>			
			<section>
							
					<div class="span7">					
						<h4 class="title"><span class="text"><strong>Product All</strong> Form</span></h4>
                        
						<!-- all product code start -->
						<% include ./partials/messages %>
			<div class="container">
				<div class="table-wrapper">
				  <div class="table-title">
					<div class="row">
					  <div class="col-sm-8">
						<h2>
						  <b>Products </b>List
						  <a href="/product/add" class="">
							<i class="fas fa-plus-circle" style="color:green"></i>
						  </a>
						</h2>
					  </div>
					  <div class="col-sm-4">
						<div class="search-box">
						  <i class="material-icons">&#xE8B6;</i>
						  <input
							type="text"
							class="form-control"
							placeholder="Search&hellip;"
						  />
						</div>
					  </div>
					</div>
					<div class="row">
					  <div class="col-sm-8"></div>
					  <div class="col-sm-4 ">
						<h1>
						  <a href="/product/report/all" class="float-right" target="blank">
							<i class="fas fa-file-pdf" style="color:rgb(184, 75, 12)"></i>
						  </a>
						</h1>
					  </div>
					</div>
				  </div>
				  <% if(typeof product_add_success_msg !== 'undefined' && product_add_success_msg != ''){ %>
				  <div class="alert alert-success alert-dismissible fade show" role="alert">
					<%= product_add_success_msg %>
					<button
					  type="button"
					  class="close"
					  data-dismiss="alert"
					  aria-label="Close"
					>
					  <span aria-hidden="true">&times;</span>
					</button>
				  </div>
				  <% } %> <% if(typeof product_del_success_msg !== 'undefined' && product_del_success_msg != ''){ %>
				  <div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= product_del_success_msg %>
					<button
					  type="button"
					  class="close" data-dismiss="alert"
					  aria-label="Close"
					>
					  <span aria-hidden="true">&times;</span>
					</button>
				  </div>
				  <% } %> <% if(typeof product_update_success_msg !== 'undefined' && product_update_success_msg != ''){ %>
				  <div class="alert alert-info alert-dismissible fade show" role="alert">
					<%= product_update_success_msg %>
					<button
					  type="button"
					  class="close"
					  data-dismiss="alert"
					  aria-label="Close"
					>
					  <span aria-hidden="true">&times;</span>
			          </button>
      </div>
      <% } %>
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>id</th>
            <th>Title<i class="fa fa-sort"></i></th>
            <th>imageURL</i></th>
            <th>price</i></th>
            <th>description</i></th>
            
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if(typeof products != 'undefined'){ %> <%
          products.forEach(function(product) { %>
          <tr>
            
            <td><%= product._id%></td>
            <td><%= product.title%></td>
            <td><img src='/images/<%= product.imageURL%>'/></td>

            <td><%= product.price%></td>
            <td><%= product.description%></td>
            
            <td>
              <a
                href="/product/<%=product._id%>"
                class="view"
                title="View"
                data-toggle="tooltip"
                ><i class="material-icons">&#xE417;</i></a
              >
              <a
                href="/product/update/<%=product._id%>"
                class="edit"
                title="Edit"
                data-toggle="tooltip"
                ><i class="material-icons">&#xE254;</i></a
              >
              <a
                href="/product/delete/<%=product._id%>"
                class="delete"
                title="Delete"
                data-toggle="tooltip"
                ><i class="material-icons">&#xE872;</i></a
              >
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
      <div class="clearfix">
        <div class="hint-text">Showing <b>10</b> out of <b>15</b> entries</div>
        <ul class="pagination">
          <li class="page-item disabled">
            <a href="#"><i class="fa fa-angle-double-left"></i></a>
          </li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
