			<section>
							
					<div class="span7">					
						<h4 class="title"><span class="text"><strong>Product Update</strong> Form</span></h4>
                        
						<form action="/product/update/<%=product._id%>" method="post" class="form-stacked" enctype="multipart/form-data">
							<fieldset>
								
								<div class="control-group">
									<label class="control-label">Title:</label>
									<div class="controls">
										<input type="text"id="title"name="title" placeholder="Enter your Title" class="input-xlarge"value="<%=typeof product.title != 'undefined'?product.title : ''%>">
									</div>
								</div>
								<div class="control-group">
									<label class="control-label">ImageURL:</label>
									<div class="controls">
										<img height="100" width="80" src='/images/<%= product.imageURL%>' />
										<input type="file" name="avatar" />
										<!-- <input type="text"id="imageURL" name="imageURL" placeholder="Enter your ImageURL" class="input-xlarge"value="<%=typeof product.imageURL != 'undefined'?product.imageURL : ''%>"> -->
									</div>
                                </div>
                                <div class="control-group">
									<label class="control-label">Last Date:</label>
									<div class="controls">
										<input type="text"id="date" name="date" placeholder="Enter your Last Date" class="input-xlarge"value="<%=typeof product.date != 'undefined'?product.date : ''%>">
									</div>
                                </div>	
                                <div class="control-group">
									<label class="control-label">Description:</label>
									<div class="controls">
										<input type="text"id="description" name="description" placeholder="Enter your description" class="input-xlarge"value="<%=typeof product.description != 'undefined'?product.description : ''%>">
									</div>
								</div>	
								
									
								<div class="form-group">
									<label for="sel1">Select Product Category:</label>
									<select class="form-control" id="sel1" name = "category" required = "">
									  <option value = "private">Private Sector </option>
									  <option value = "public">Public Sector</option>
									  <option value = "top">Top Rated Universities</option>
									  <!-- <option value = "sports">Sports</option> -->
									</select>
								</div>	


								<!-- start subcategory tags -->
								<div class="bs-example">
									<label for ="#tags">Type a tag, then press enter</label>
									<select multiple data-role="tagsinput" id = "tags" name = "subcategory">
										<%product.subcategory.forEach( (subcategory) => { %>
											<option value = "<%=subcategory%>">value = <%=subcategory%> </option>
										<% })%>
									</select>
								</div>
														    					                            
								
								<hr>
								<div class="actions">
									<input tabindex="9" class="btn btn-inverse large" type="submit" value="productUpdate"></div>
							</fieldset>
						</form>	
                        
